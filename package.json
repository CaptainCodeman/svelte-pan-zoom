{
	"name": "svelte-pan-zoom",
	"version": "0.0.1",
	"type": "module",
	"keywords": [
		"svelte",
		"component",
		"canvas",
		"image",
		"pan",
		"zoom",
		"touch",
		"gesture"
	],
	"files": [
		"dist"
	],
	"exports": {
		".": "./dist/index.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"homepage": "https://captaincodeman.github.io/svelte-pan-zoom/",
	"repository": {
		"type": "git",
		"url": "https://github.com/captaincodeman/svelte-pan-zoom.git"
	},
	"author": {
		"name": "Simon Green",
		"email": "simon@captaincodeman.com",
		"url": "https://www.captaincodeman.com/"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "tsup",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"tsup": {
		"entry": [
			"src/lib/index.ts"
		],
		"format": [
			"esm"
		],
		"sourcemap": true,
		"minify": true,
		"clean": true,
		"dts": true
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "1.0.0",
		"@sveltejs/kit": "1.0.1",
		"svelte": "^3.55.0",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"tsup": "^6.5.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.3"
	}
}